<p id="notice"><%= notice %></p>

<h1>プロフィール</h1>

<%= gravatar_for @user%>
<p>
  <strong>名前:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>メールアドレス:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>自己紹介:</strong>
  <%= @user.introduction %>
</p>

<h3>スキル</h3>
<%= form_tag("/users/#{params[:id]}/add_skill", method: "post") do %>
  <%= label_tag(:skill, "スキル名") %>
  <%= text_field_tag(:skill) %>
  <%= submit_tag("追加") %>
<% end %>
<table>
  <tbody>
    <tr>
      <th>スキル名</th>
      <th>+の数</th>
      <th>　+した人</th>
      <th></th>
      <th></th>
    </tr>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td>+<%= @skill_reaction[skill.id].length %></td>
        <td>
          <% if @skill_reaction[skill.id] != "" %>
            <% @skill_reaction[skill.id].each do |s_r| %>
              <%= s_r.name %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', skill %></td>
        <%= form_tag("/users/#{params[:id]}/#{skill.id}", method: "post", :name => :reaction) do %>
        <td>
          <%= submit_tag("+1") %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', users_path %>