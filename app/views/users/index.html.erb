<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>自己紹介</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to 'プロフィールを見る', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
